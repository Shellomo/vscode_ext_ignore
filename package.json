{
  "name": "ignorex",
  "displayName": "ignore - .gitignore Manager",
  "icon": "media/logo.png",
  "description": "Manage .gitignore files with ease",
  "publisher": "Shellomo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ignorex.addPattern",
    "onCommand:ignorex.removePattern",
    "onCommand:ignorex.createGitignore"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ignorex.addPattern",
        "title": "Ignore: Add Pattern"
      },
      {
        "command": "ignorex.removePattern",
        "title": "Ignore: Remove Pattern"
      },
      {
        "command": "ignorex.createGitignore",
        "title": "Ignore: Create .gitignore"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "ts-loader": "^9.4.3",
    "@vscode/test-electron": "^2.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shellomo/vscode_ext_ignore"
  },
  "keywords": [
    "ignore",
    "gitignore",
    "git",
    "ignorefile",
    "ignore file",
    "ignore pattern",
    "ignore patterns"
  ]
}